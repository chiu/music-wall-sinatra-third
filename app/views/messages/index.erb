<h1>All Messages</h1>
<hr/>

<% @messages.each do |message| %>
  <div class="message">
   <!--  <h3><%= message.title %> <small>(by: <%= message.author %>)</small></h3> -->
   <!-- <h3><a href="/messages/<%= message.id %>"><%= message.title %></a> <small>(by: <%= message.author %>)</small></h3> -->
       <h3><a href="/messages/<%= message.id %>"><%= message.author %></a> <small>(by: <%= message.author %>)( url: <%= message.url %>)(created at: <%= message.created_at %>  )(updated at: <%= message.updated_at %> )) </small></h3> 
    <p>
