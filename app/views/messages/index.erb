<h1>Messages</h1>
 
<% if user_logged_in? %>
  <p>Welcome <%= get_current_user.name %></p>
<% end %>
 
<% @messages.each do |message| %>
    <div class="message">
        <h2><a href="/messages/<%= message.id %>"><%= message.song_title %></a> <small>(by: <%= message.author %>)</small></h2>
        <p>
            <%= message.content %>
        </p>
    </div>
<% end %>
 
<a href="/messages/new">Post a message</a>